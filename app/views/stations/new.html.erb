
<div class="container">
  <h1>Create a station</h1>
  <div class="create-form">
    <%= simple_form_for(@station) do |f| %>
      <%= f.input :address, label:false, placeholder: "where is the station located ..."%>
      <%= f.input :charger, label: false, collection: ["tesla", "mercedes", "bmw", "volkswagen", "volvo", "ford"] %>
      <br>
      <%#= f.input :photo %>
      <%#= f.input :photo_cache, as: :hidden %>
      <%= f.submit "add station", class: "btn btn-primary" %>
    <% end %>
  </div>
<!-- input field using mapbox autocomplete? -->
</div>
