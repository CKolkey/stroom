<div class="container">
  <h1>Find a station</h1>
  <%= simple_form_for :search, url: stations_path, method: "GET", html: { class: 'form-inline' } do |f| %>
    <%= f.input :address, input_html: {value: ""} %>
    <%#= f.input :charger, input_html: {value: ""} %>
    <%= f.input :charger, collection: ["tesla", "mercedes", "bmw", "volkswagen", "volvo", "ford"] %>
    <%#= f.input :start, as: :datetime %>
    <%= f.input :start, as: :string, required: false, input_html: {class: "datepicker d-none"}, label: false %>
    <%= f.submit "Search", class: "btn btn-primary" %>
  <% end %>


